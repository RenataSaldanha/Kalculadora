<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_conta"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="40sp"
        />

    <TextView
        android:id="@+id/txt_resultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="30sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnLimpar"
            style="@style/btn_operadores"
            android:text="C" />

        <TextView
            android:id="@+id/btnDividir"
            style="@style/btn_operadores"
            android:onClick="pegarOperador"
            android:text="/" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/num7"
            style="@style/btn_numeros"
            android:onClick="adicionarNumero"
            android:text="7" />

        <TextView
            android:id="@+id/num8"
            style="@style/btn_numeros"
            android:onClick="adicionarNumero"
            android:text="8" />


        <TextView
            android:id="@+id/num9"
            style="@style/btn_numeros"
            android:onClick="adicionarNumero"
            android:text="9" />

        <TextView
            android:id="@+id/btnMultiplicar"
            style="@style/btn_operadores"
            android:onClick="pegarOperador"
            android:text="x" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/num4"
            style="@style/btn_numeros"
            android:onClick="adicionarNumero"
            android:text="4" />

        <TextView
            android:id="@+id/num5"
            style="@style/btn_numeros"
            android:onClick="adicionarNumero"
            android:text="5" />


        <TextView
            android:id="@+id/num6"
            style="@style/btn_numeros"
            android:onClick="adicionarNumero"
            android:text="6" />

        <TextView
            android:id="@+id/btnSubtrair"
            style="@style/btn_operadores"
            android:onClick="pegarOperador"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/num1"
            style="@style/btn_numeros"
            android:onClick="adicionarNumero"
            android:text="1" />

        <TextView
            android:id="@+id/num2"
            style="@style/btn_numeros"
            android:onClick="adicionarNumero"
            android:text="2" />


        <TextView
            android:id="@+id/num3"
            style="@style/btn_numeros"
            android:onClick="adicionarNumero"
            android:text="3" />

        <TextView
            android:id="@+id/btnAdicionar"
            style="@style/btn_operadores"
            android:onClick="pegarOperador"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnPonto"
            style="@style/btn_numeros"
            android:onClick="adicionarNumero"
            android:text="." />

        <TextView
            android:id="@+id/num0"
            style="@style/btn_numeros"
            android:onClick="adicionarNumero"
            android:text="0" />


        <ImageButton
            android:id="@+id/btnApagar"
            style="@style/btn_numeros"
            android:src = "@drawable/ic_baseline_backspace_24"
            android:scaleType="center"/>

        <TextView
            android:id="@+id/btnIgual"
            style="@style/btn_operadores"
            android:text="=" />
    </LinearLayout>
</LinearLayout>